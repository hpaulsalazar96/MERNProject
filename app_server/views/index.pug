extends layout

block content
  // Inicia el contenido de la p치gina
  header
      // Fixed navbar
      nav.navbar.navbar-expand-md.fixed-top.bg-dark.navbar-dark.text-white
        .container-fluid
          a.navbar-brand(href='/') Proyecto MERN
          button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarCollapse' aria-controls='navbarCollapse' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarCollapse.collapse.navbar-collapse
            // Nueva versi칩n de las opciones OJO: me-auto mb-2 mb-md-0  en la lista ul
            ul.nav.col-12.col-lg-auto.my-2.justify-content-center.my-md-0.text-small
              li
                a.nav-link.active(href='/')
                  svg.bi.d-block.mx-auto.mb-1(width='24' height='24')
                    use(xlink:href='#home')
                  |  Home
              li.nav-item.dropdown
                a#usuarios.nav-link.dropdown-toggle.active(href='#' data-bs-toggle='dropdown' aria-expanded='false')
                  svg.bi.d-block.mx-auto.mb-1(width='24' height='24')
                    use(xlink:href='#people-circle')
                  |  Users
                ul.dropdown-menu(aria-labelledby='usuarios')
                  li
                    a.dropdown-item(href='/users/add') Create
                  li
                    a.dropdown-item(href='/users/search') Read One
                  li
                    a.dropdown-item(href='/users/list') Read All
                  li
                    a.dropdown-item(href='/users/update') Update
                  li
                    a.dropdown-item(href='/users/delete') Delete
              li
                a.nav-link.text-white(href='/about')
                  svg.bi.d-block.mx-auto.mb-1(width='24' height='24')
                    use(xlink:href='#grid')
                  |  About

  main.flex-shrink-0
    .container
      h1.mt-5 Mi primer Proyecto MERN v1
      hr(style="background-color: black;")
      h1.text-center Listado de usuarios
      table.table.table-hover.table-dark.table-responsive.bg-secondary.table-striped
        caption
        thead.thead-dark.fixed
          tr
            th(scope="col") #
            th(scope="col") Nombre
            th(scope="col") Apellido
            th(scope="col") Direcci칩n
            th(scope="col") Carrera
            //th(scope='col') Documento
            th(scope="col") Operaciones
        tbody
          - var pos=1
          each usuario in objetoUsuario
            tr
              td.numUsuario=pos++
              td #{usuario.nombre}
              td #{usuario.apellido}
              td #{usuario.direccion}
              td #{usuario.carrera}
              td.documento(style='display:none;')= usuario._id 
              td
                a.btn.btn-outline-light.space.text-warning(role='button' href='/users/update/'+usuario._id )
                  em.fas.fa-edit
                a.btn.btn-outline-light.space.text-danger(role='button' href='/users/delete/'+usuario._id )
                  em.far.fa-trash-alt
