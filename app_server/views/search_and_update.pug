extends layout

block content
      // Inicia el contenido de la página
      header
          // Fixed navbar
          nav.navbar.navbar-expand-md.fixed-top.bg-dark.navbar-dark.text-white
            .container-fluid
              a.navbar-brand(href='/') Proyecto MEAN
              button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarCollapse' aria-controls='navbarCollapse' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
              #navbarCollapse.collapse.navbar-collapse
                // Nueva versión de las opciones OJO: me-auto mb-2 mb-md-0  en la lista ul
                ul.nav.col-12.col-lg-auto.my-2.justify-content-center.my-md-0.text-small
                  li
                    a.nav-link.text-white(href='/')
                      svg.bi.d-block.mx-auto.mb-1.text-white(width='24' height='24' color='white')
                        use(xlink:href='#home')
                      |  Home
                  li.nav-item.dropdown
                    a#usuarios.nav-link.dropdown-toggle.active(href='/users' data-bs-toggle='dropdown' aria-expanded='false')
                      svg.bi.d-block.mx-auto.mb-1(width='24' height='24')
                        use(xlink:href='#people-circle')
                      |   Users
                    ul.dropdown-menu(aria-labelledby='usuarios')
                      li
                        a.dropdown-item(href='/users/add') Create
                      li
                        a.dropdown-item(href='/users/search') Read One
                      li
                        a.dropdown-item(href='/users/list') Read All
                      li
                        a.dropdown-item(href='/users/supdate') Update
                      li
                        a.dropdown-item(href='/users/sdelete') Delete
                  li
                    a.nav-link.text-white(href='/about')
                      svg.bi.d-block.mx-auto.mb-1(width='24' height='24')
                        use(xlink:href='#grid')
                      |  About

      main.flex-shrink-0
        .container
            h1.mt-5 #{title}
            hr(style='background-color: black;')
            form.form-inline.mt-2.mt-md-0(action='/users/supdate', method='post', role='form')
                .row.g-3.align-items-center
                    .col-auto
                    input.form-control#codigo.mr-sm-2.ml-sm-2(type='text' ,name="codigo" ,placeholder='Código de usuario' ,aria-label='Buscar' )
                    .col-auto
                    button.btn.btn-outline-primary(type='submit') Buscar
                    span#buscarAyuda.form-text.ml-md-2
                        | Puede ingresar caracteres alfanum&eacute;ricos
            .row.g-3
                .col-md-2
                .col-md-8
                  .card
                    .card-body
                      form.row.g-3(action, method='post', role='form')
                        .col-md-6
                          label.form-label(for='nombre') Nombre
                          input#nombre.form-control(type='text' name='nombre' value=nombre placeholder='Ingrese el nombre del usuario')
                        .col-md-6
                          label.form-label(for='apellido') Apellido
                          input#apellido.form-control(type='text' name='apellido' value=apellido placeholder='Ingrese el apellido del usuario')
                        .col-12
                          label.form-label(for='direccion') Dirección
                          input#direccion.form-control(type='text' name='direccion' value=direccion placeholder='Ingrese la dirección del usuario')
                        .col-md-4
                          label.form-label(for='identificacion') Identificación
                          input#identificacion.form-control(type='number' name='identificacion' value=identificacion placeholder='Ingrese la identificación del usuario')
                        .col-md-4
                          label.form-label(for='edad') Edad
                          input#edad.form-control(type='number' name='edad' value=edad placeholder='Ingrese la edad del usuario')
                        .col-md-4
                          label.form-label(for='telefono') Teléfono
                          input#telefono.form-control(type='number' name='telefono' value=telefono placeholder='Ingrese el teléfono del usuario')
                        .col-md-6
                          .col-md-12.mb-3
                            label.form-label(for='tipo') Tipo de Materia
                            select#tipo.form-select(name='tipo' value=tipo)
                              option(selected='') Seleccione el tipo de materia
                              option(value='Presencial') Presencial
                              option(value='Virtual') Virtual
                          .col-md-12.mb-3
                            label.form-label(for='carrera') Carrera
                            input#carrera.form-control(type='text' name='carrera' value=carrera placeholder='Ingrese el nombre de la carrera')
                          .col-md-12.mb-3
                            label.form-label(for='fecha') Fecha de Creación
                            input#fecha.form-control(type='date' name='creado' value=creado placeholder='Fecha Actual')
                        .col-md-6.d-flex.mb-3
                          label.col-md-3.col-form-label(for='materias') Materias
                          select#materias.form-select(name='nombres' multiple='' value=nombres aria-label='multiple select materias')
                            option(selected) Seleccione las materias
                            option(value='Desarrollo web 1') Desarrollo web 1
                            option(value='Desarrollo web 2') Desarrollo web 2
                            option(value='Desarrollo web 3') Desarrollo web 3
                            option(value='Fotografía 1') Fotografía 1
                            option(value='Fotografía 2') Fotografía 2
                            option(value='Fotografía 3') Fotografía 3
                            option(value='Periodismo 1') Periodismo 1
                            option(value='Periodismo 2') Periodismo 2
                            option(value='Periodismo 3') Periodismo 3
                        .col-md-12.d-flex.mb-3  
                          //Añadimos el campo 'documento' para no perder el object Id del documento a actualizar           
                          label.col-md-4.col-form-label(for='documento') Código del Documento a Actualizar
                          input#documento.form-control(type='text', name='documento', value=documento, placeholder='Código del Documento', readonly='')                        
                        button.btn.btn-outline-primary(type='submit') Actualizar Usuario
            hr(style='background-color: black;')

      // Inicia el contenido del footer de la página
      footer.footer.mt-auto.py-3.bg-light.fixed-bottom
        .container
          span.text-muted #{mensaje}